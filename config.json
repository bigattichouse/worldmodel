{
  "model": {
    "model_name": "Qwen/Qwen2.5-3B-Instruct",
    "model_path": "../model/Qwen2.5-3B-Instruct",
    "device": "cpu",
    "torch_dtype": "float32",
    "max_length": 4096,
    "temperature": 0.7,
    "top_p": 0.9
  },
  "execution": {
    "vm_type": "qemu",
    "vm_path": "../scratchpad",
    "timeout_seconds": 30,
    "max_memory_mb": 512,
    "allowed_languages": [
      "python",
      "javascript",
      "bash",
      "c"
    ]
  },
  "memory": {
    "vector_db_type": "faiss",
    "vector_db_path": "./data/vectors",
    "embedding_model": "huggingface",
    "embedding_dim": 2048,
    "max_retrievals": 5,
    "similarity_threshold": 0.3,
    "model_registry_path": "./data/models"
  },
  "training": {
    "batch_size": 4,
    "learning_rate": 5e-05,
    "num_epochs": 3,
    "warmup_steps": 100,
    "gradient_accumulation_steps": 4,
    "max_grad_norm": 1.0,
    "save_steps": 500,
    "eval_steps": 100,
    "output_dir": "./checkpoints",
    "synthetic_data_size": 2500
  },
  "uncertainty": {
    "perplexity_threshold": 50.0,
    "confidence_threshold": 0.8,
    "min_tokens_for_detection": 10,
    "detection_method": "perplexity"
  },
  "approval": {
    "auto_approve_categories": [
      "python:math",
      "python:data_processing",
      "javascript:computation",
      "bash:file_read"
    ],
    "require_approval_categories": [
      "bash:system",
      "python:web",
      "c:all"
    ],
    "approval_timeout_seconds": 300
  }
}